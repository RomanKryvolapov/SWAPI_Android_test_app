    <!-- Text inputs -->
    <style name="DefaultTextInputLayoutStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:drawablePadding">@dimen/margin_8</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundColor">@color/color_background</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusTopStart">0dp</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="endIconDrawable">@drawable/ic_clean</item>
        <item name="endIconMode">none</item>
        <item name="endIconTint">@null</item>
        <item name="backgroundTint">@color/color_background</item>
        <item name="errorTextColor">@color/color_BF1212</item>
        <item name="errorIconDrawable">@null</item>
        <item name="android:background">@color/color_background</item>
        <!-- Default hint color-->
        <item name="android:textColorHint">@color/color_text_hint</item>
        <!-- Focused hint color-->
        <item name="hintTextColor">@color/color_text_hint</item>
        <item name="hintTextAppearance">@style/TextStyle.12sp.Regular.0C53B2</item>
        <item name="hintEnabled">true</item>
        <item name="android:textCursorDrawable">@drawable/cursor_custom</item>
    </style>

    <style name="CustomAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@color/color_transparent</item>
    </style>

    <style name="DefaultEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/margin_16</item>
        <item name="android:paddingStart">@dimen/margin_6</item>
        <item name="android:paddingBottom">@dimen/margin_4</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="fontWeight">400</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:focusableInTouchMode">true</item>
        <!--        <item name="android:background">@drawable/bg_input_layout_default</item>-->
        <item name="android:textColorHint">@color/color_text_hint</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@drawable/bg_edit_text</item>
    </style>

