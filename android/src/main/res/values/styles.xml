<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">

        <item name="android:background">@color/color_background_splash</item>
        <item name="android:windowBackground">@color/color_background_splash</item>
        <item name="windowSplashScreenBackground">@color/color_background_splash</item>

        <item name="android:statusBarColor">@color/color_status_bar</item>
        <item name="android:navigationBarColor">@color/color_navigation_bar</item>

        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_small</item>
        <item name="postSplashScreenTheme">@style/Theme.App</item>
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

    </style>

    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="android:background">@color/color_background</item>
        <item name="android:windowBackground">@color/color_background</item>

        <item name="android:statusBarColor">@color/color_status_bar</item>
        <item name="android:navigationBarColor">@color/color_navigation_bar</item>

        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <item name="colorAccent">@color/color_295999</item>

        <item name="colorPrimary">@color/color_295999</item>
        <item name="colorPrimaryVariant">@color/color_295999</item>
        <item name="colorOnPrimary">@color/color_black</item>
        <item name="colorPrimaryDark">@color/color_295999</item>

        <item name="colorSecondary">@color/color_295999</item>
        <item name="colorSecondaryVariant">@color/color_295999</item>
        <item name="colorOnSecondary">@color/color_295999</item>

        <item name="android:colorEdgeEffect">@color/color_295999</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="29">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">@dimen/margin_2</item>
        <item name="android:paddingEnd">@dimen/margin_2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textColor">@color/color_text_buttons</item>
        <item name="drawableTint">@color/color_text_buttons</item>
    </style>

    <style name="ImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">@dimen/margin_2</item>
        <item name="android:paddingEnd">@dimen/margin_2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="drawableTint">@color/color_text_buttons</item>
    </style>

    <style name="CustomListPopupWindowStyle" parent="Widget.AppCompat.ListPopupWindow">
        <item name="android:popupBackground">@drawable/bg_popup_window_menu</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_base</item>
        <item name="behavior_peekHeight">300dp</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="colorAccent">@color/color_295999</item>
    </style>

    <style name="BannerMessageStyle">
        <item name="android:windowEnterAnimation">@anim/banner_slide_down</item>
        <item name="android:windowExitAnimation">@anim/banner_slide_up</item>
    </style>

