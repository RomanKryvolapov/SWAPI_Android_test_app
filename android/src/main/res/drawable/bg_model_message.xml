<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/fields_corner_radius" />
            <solid android:color="@color/color_background_model_message" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerColor="@color/color_gradient_light_center"
                android:centerY="@dimen/gradient_top"
                android:endColor="@color/color_gradient_light_end"
                android:startColor="@color/color_gradient_light_start"
                android:type="linear" />
            <corners android:radius="@dimen/fields_corner_radius" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="-90"
                android:centerColor="@color/color_gradient_shadow_center"
                android:centerY="@dimen/gradient_bottom"
                android:endColor="@color/color_gradient_shadow_end"
                android:startColor="@color/color_gradient_shadow_start"
                android:type="linear" />
            <corners android:radius="@dimen/fields_corner_radius" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:centerColor="@color/color_gradient_light_center"
                android:centerX="@dimen/gradient_left"
                android:endColor="@color/color_gradient_light_end"
                android:startColor="@color/color_gradient_light_start"
                android:type="linear" />
            <corners android:radius="@dimen/fields_corner_radius" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="360"
                android:centerColor="@color/color_gradient_shadow_center"
                android:centerX="@dimen/gradient_right"
                android:endColor="@color/color_gradient_shadow_end"
                android:startColor="@color/color_gradient_shadow_start"
                android:type="linear" />
            <corners android:radius="@dimen/fields_corner_radius" />
        </shape>
    </item>
</layer-list>